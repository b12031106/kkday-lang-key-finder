{
  "name": "kkday-lang-key-finder",
  "version": "1.0.0",
  "description": "Chrome extension for finding i18n translation keys on KKday websites",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "build": "npm run lint && npm run test",
    "dev": "npm run lint:fix && npm run format"
  },
  "dependencies": {
    "fuse.js": "^7.0.0"
  },
  "devDependencies": {
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "jest-chrome": "^0.8.0",
    "eslint": "^8.57.0",
    "prettier": "^3.1.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^27.5.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "**/tests/**/*.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  },
  "babel": {
    "presets": ["@babel/preset-env"]
  },
  "keywords": ["chrome-extension", "i18n", "translation", "kkday"],
  "author": "Your Name",
  "license": "MIT"
}